<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context="com.jeferson.proyecticartive.activities.fragments.PrincipalFragment">

    <LinearLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:background="@drawable/white_grey_border_bottom"
            >

            <ImageView
                android:layout_width="250dp"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="66dp"
                android:foregroundGravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/logo_cartive"/>

            <ImageView
                android:id="@+id/imginformacion"
                android:layout_width="38dp"
                android:layout_height="68dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_info"
                />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e7e9ef"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:weightSum="1">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:elevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Desde"
                                android:textColor="@color/primary_text"
                                android:id="@+id/txtdesde"/>

                            <EditText
                                android:focusable="false"
                                android:id="@+id/txtlima"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_city"
                                android:enabled="false"
                                android:text="Lima"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="A"
                                android:textColor="@color/primary_text"
                                android:id="@+id/txta"/>

                            <SearchView
                                android:id="@+id/buscador"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:iconifiedByDefault="false"
                                android:queryHint="Ingresar Destino"
                                />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.1"
                            android:src="@drawable/ic_change"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                 <RelativeLayout
                     android:id="@+id/animationlist"
                     android:orientation="vertical"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <ListView
                         android:id="@+id/ContenlistView"
                         android:layout_width="match_parent"
                         android:layout_height="200dp"
                         android:layout_marginBottom="20dp"
                         android:background="@color/white"
                         android:padding="10dp"
                         />

                     <android.support.v7.widget.CardView
                         android:layout_below="@+id/ContenlistView"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_marginBottom="20dp"
                         android:id="@+id/fechView"
                         app:cardElevation="10dp">
                         <LinearLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical"
                             android:padding="10dp"
                             >
                             <com.github.jhonnyx2012.horizontalpicker.HorizontalPicker
                                 android:id="@+id/datePicker"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"/>
                             <TextView
                                 android:id="@+id/txthoy"
                                 android:gravity="center_horizontal"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:text="Hoy"/>
                         </LinearLayout>
                     </android.support.v7.widget.CardView>

                     <ImageButton
                         android:layout_below="@+id/fechView"
                         android:layout_centerHorizontal="true"
                         android:id="@+id/btnseleccionar"
                         android:layout_gravity="center_horizontal"
                         android:layout_width="70dp"
                         android:layout_height="70dp"
                         android:src="@drawable/ic_next"
                         android:background="@drawable/round_button"
                         />
                 </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
